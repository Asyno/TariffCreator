<Application x:Class="TariffCreator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TariffCreator"
             StartupUri="NewTariff/NewTariff.xaml">
    <Application.Resources>
        <Style TargetType="{x:Type Window}">
            <Setter Property="Window.Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF364C7C" Offset="1"/>
                    <GradientStop Color="#FF172136" Offset="0.317"/>
                    <GradientStop Color="#FF131C2E" Offset="0.483"/>
                    <GradientStop Color="#FF364C7C" Offset="0.774"/>
                </LinearGradientBrush>
            </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
